<Page x:Class="WpfApp1.View.IngredientCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Name" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="232,199,0,0" Width="78"/>
        <TextBox Text="{Binding Path=ingredientName, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="342,203,0,0" Width="204"/>
        <Button Content="Save" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="400,263,0,0" Width="88" Command="{Binding Path=saveIngredientClick}" />
        <Button Content="Ingredients" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="550,263,0,0" Width="88" Command="{Binding Path=ingredientsListPageClick}" />
        <Button Content="Menu" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="232,263,0,0" Width="88" Command="{Binding Path=menuPageClick}" />
    </Grid>
</Page>
